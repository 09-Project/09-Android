<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PostActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="360dp"
            android:layout_height="360dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_main_product_default" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_post_back" />

        <ImageView
            android:id="@+id/ivMemberProfile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProduct"
            app:srcCompat="@drawable/ic_profile_default" />

        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:text="닉네임"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/ivMemberProfile"
            app:layout_constraintStart_toEndOf="@+id/ivMemberProfile"
            app:layout_constraintTop_toTopOf="@+id/ivMemberProfile" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMemberName"
            app:layout_constraintStart_toEndOf="@+id/tvMemberName"
            app:layout_constraintTop_toTopOf="@+id/tvMemberName"
            app:srcCompat="@drawable/ic_post_next" />

        <TextView
            android:id="@+id/tvPostTItle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/black"
            android:text="XXX 공동구매"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/ivMemberProfile"
            app:layout_constraintTop_toBottomOf="@+id/ivMemberProfile" />

        <TextView
            android:id="@+id/tvPostPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:text="15,000"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvPostTItle"
            app:layout_constraintTop_toTopOf="@+id/tvPostTItle" />

        <TextView
            android:id="@+id/textView16"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="원"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tvPostPrice"
            app:layout_constraintStart_toEndOf="@+id/tvPostPrice"
            app:layout_constraintTop_toTopOf="@+id/tvPostPrice" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tvPostPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvPostPrice"
            app:srcCompat="@drawable/ic_post_location" />

        <TextView
            android:id="@+id/tvPostTransactionRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:text="XX도 XX시 XX동"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="@+id/imageView12" />

        <ImageView
            android:id="@+id/iv091"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPostTransactionRegion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPostTransactionRegion"
            app:srcCompat="@drawable/ic_post_blue_box" />

        <TextView
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="11dp"
            android:id="@+id/tv092"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공동구매"
            app:layout_constraintBottom_toBottomOf="@+id/iv091"
            app:layout_constraintEnd_toEndOf="@+id/iv091"
            app:layout_constraintStart_toStartOf="@+id/iv091"
            app:layout_constraintTop_toTopOf="@+id/iv091" />


        <TextView
            android:id="@+id/tvPostContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:text="TextView"
            android:textColor="#232323"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPostTransactionRegion" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPostContent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPostOtherProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <View
            android:id="@+id/viewMember"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMemberName"
            app:layout_constraintEnd_toEndOf="@+id/imageView10"
            app:layout_constraintStart_toStartOf="@+id/ivMemberProfile"
            app:layout_constraintTop_toTopOf="@+id/tvMemberName" />

        <TextView
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:text="다른 상품 보기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/ic_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPostTransactionRegion">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivPostHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_post_heart_off"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찜하기"
                    android:textSize="12dp"
                    android:fontFamily="@font/noto_sans_kr_regular"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#707070"/>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivMenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_post_checked"/>
                <TextView
                    android:id="@+id/tvMenu2"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래완료"
                    android:textSize="12dp"
                    android:fontFamily="@font/noto_sans_kr_regular"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#707070"/>
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivMenu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_post_chat_"/>
                <TextView
                    android:id="@+id/tvMenu3"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채팅하기"
                    android:textSize="12dp"
                    android:fontFamily="@font/noto_sans_kr_regular"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>